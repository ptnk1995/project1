<div id="header">
  <%= image_tag "logo.png", alt: t("alt"), class:"logo" %>
  <ul id="navigation">
    <li><%= link_to t("header.home"), root_path %></li>
    <% if logged_in? %>
      <li><%= link_to t("header.exam"), exams_path %></li>
      <li><%= link_to t("header.contributes_question"), suggest_questions_path %></li>
      <li><%= link_to t("header.activities"), "#" %></li>
      <li><%= link_to t("header.users"), users_path %></li>
      <li class="dropdown">
        <a href="#" class="dropdown" data-toggle="dropdown">
          <%= t("header.account") %><b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to t("header.profile"), current_user %></li>
          <li><%= link_to t("header.setting"), edit_user_path(current_user) %></li>
          <hr />
          <li>
            <%= link_to t("header.logout"), logout_path, method: :delete %>
          </li>
        </ul>
      </li>
    <% else %>
    <li><%= link_to t("header.contact"), contact_path %></li>
    <li><%= link_to t("header.signup"), signup_path %></li>
    <li><%= link_to t("header.login"), login_path %></li>
  <% end %>
  </ul>
</div>
