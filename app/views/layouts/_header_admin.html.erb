<header-admin id="header-admin">
  <div id="info-bar">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 top-info hidden-xs">
          <span><%= t "header_admin.phone" %></span>
          <span><%= t "header_admin.email" %></span>
        </div>
      </div>
    </div>
  </div>
  <div id="logo-bar">
    <div class="container">
      <div class="row">
        <div class="col-md-3 col-sm-3">
          <div id="logo">
            <h1><%= link_to t("menu_admin.admin"), admin_root_path %></h1>
            <p><%= t "menu_admin.introduce" %></p>
          </div>
        </div>
        <div class="col-md-9 col-sm-9">
          <div class="navbar navbar-default navbar-static-top"
            role="navigation">
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li>
                <%= link_to t("menu_admin.user"), admin_users_path,
                  class: "white" %>
              </li>
              <li>
                <%= link_to t("menu_admin.category"), admin_categories_path,
                  class: "white" %>
              </li>
              <li>
                <%= link_to t("menu_admin.question"), admin_questions_path,
                  class: "white" %>
              </li>
              <li>
                <%= link_to t("menu_admin.question_suggest"), root_path,
                 class: "white" %>
              </li>
              <li>
                <%= link_to t("menu_admin.exam"), admin_exams_path, class: "white" %>
              </li>
              <li>
                <%= link_to t("menu_admin.report"), root_path,
                  class: "white" %>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t "menu_admin.account.description" %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t("menu_admin.account.profile"), "#" %></li>
                  <li><%= link_to t("menu_admin.account.setting"), "#" %></li>
                  <li><%= link_to t("menu_admin.account.logout"), logout_path, method: :delete %></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</header-admin>
