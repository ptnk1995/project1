<%= form_for [:admin, @user] do |f| %>
  <%= render "shared/error_messages", object: @user %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: t("user_admin.placeholder.name"),
      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: t("user_admin.placeholder.email"),
      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password,
      placeholder: t("user_admin.placeholder.password"),
        class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: t("user_admin.placeholder.confirmation"),
      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :role %>
    <%= f.select :role, User.roles.keys, {}, class: "form-control" %>
  </div>
  <%= f.submit t("user_admin.update"), class: "btn btn-primary btnUser" %>
<% end %>
