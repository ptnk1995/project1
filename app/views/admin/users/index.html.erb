<h5>
  <%= link_to new_admin_user_path, class: "btn icon-btn btn-primary" do %>
    <span class="glyphicon btn-glyphicon glyphicon-plus
      img-circle text-success">
      <%= t("user_admin.create")%>
    </span>
  <% end %>
</h5>
<hr>
<table class="table table-striped table-bordered table-custom" cellspacing="0">
  <thead>
    <tr>
      <th><%= t "user_admin.user_avatar" %></th>
      <th><%= t "user_admin.user_name" %></th>
      <th><%= t "user_admin.user_email" %></th>
      <th><%= t "user_admin.role" %></th>
      <th class = "last-column"><%= t "user_admin.action" %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= display_image user, "avatar" %>
        </td>
        <td><%= link_to user.name, admin_user_path(user) %></td>
        <td><%= user.email %></td>
        <td>
          <span class="label label-<%= show_status user %>">
            <%= user.role %>
          </span>
        </td>
        <td class = "last-column">
          <span class="pull">
            <%= link_to edit_admin_user_path(user),
              class: "btn btn-sm btn-warning" do %>
              <i class="glyphicon glyphicon-edit"></i>
            <% end %>
            <%= link_to admin_user_path(user), method: :delete,
              data: {confirm: t("user_admin.delete")} ,
                class: "btn btn-sm btn-danger" do %>
              <i class="glyphicon glyphicon-remove"></i>
            <% end %>
        </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="center"><%= will_paginate %></div>
