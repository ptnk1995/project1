<div class="container">
  <div class="row">
    <div class="col-md-5 toppad pull-right col-md-offset-3 ">
      <br />
      <p class="text-info">
        <%= l Time.now, format: :long %>
      </p>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0
      col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= @user.name %>
          </h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-lg-3 " align="center">
              <%= display_image @user, t("user_admin.avatar") %>
            </div>
            <div class=" col-md-9 col-lg-9 ">
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <td><%= t("user_admin.user_name") %></td>
                    <td><%= @user.name %></td>
                  </tr>
                  <tr>
                    <td><%= t("user_admin.date") %></td>
                    <td>
                      <%= l @user.created_at, format: :short %>
                    </td>
                  </tr>
                  <tr>
                    <td><%= t("user_admin.role") %></td>
                    <td><%= @user.role %></td>
                  </tr>
                  <tr>
                    <td><%= t("user_admin.user_email") %></td>
                    <td><%= link_to @user.email %></td>
                </tbody>
              </table>
              <%= link_to t("menu_admin.mark"), "#", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <%= link_to "#",
              class: "btn btn-sm btn-primary" do %>
              <i class="glyphicon glyphicon-envelope"></i>
            <% end %>
          <span class="pull-right">
            <%= link_to edit_admin_user_path(@user),
              class: "btn btn-sm btn-warning" do %>
              <i class="glyphicon glyphicon-edit"></i>
            <% end %>
            <%= link_to admin_user_path(@user), method: :delete,
                data: {confirm: t("user_admin.delete")},
                  class: "btn btn-sm btn-danger" do %>
              <i class="glyphicon glyphicon-remove"></i>
            <% end %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
