<div id="body">
  <h2><%= t "new_user.signup" %></h2>
  <%= form_for @user do |f| %>
    <%= render "shared/error_messages" %>
    <%= f.text_field :name, placeholder: t("form.name") %>
    <%= f.email_field :email, placeholder: t("form.email") %>
    <%= f.password_field :password, placeholder: t("form.password") %>
    <%= f.password_field :password_confirmation,
      placeholder: t("form.confirmation") %>
    <%= f.submit t("button.create"), class: "btn send" %>
  <% end %>
</div>
