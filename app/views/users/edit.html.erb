<%= render "shared/user_infor"%>
<div class="form_edit">
  <h2><%= t "function.update" %></h2>
  <%= form_for @user, html: {multipart: true} do |f| %>
    <%= render "shared/error_messages" %>
    <%= f.text_field :name, placeholder: t("form.name") %>
    <%= f.email_field :email, placeholder: t("form.email") %>
    <%= f.password_field :password, placeholder: t("form.password") %>
    <%= f.password_field :password_confirmation,
      placeholder: t("form.confirmation") %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <span class="picture">
        <%= f.file_field :avatar, accept: Settings.type_image %>
      </span>
    </div>
    <%= f.submit t("button.save"), class: "btn send white" %>
  <% end %>
</div>
