<div id="services">
  <div class="col-lg-3 col-sm-6">
    <div class="card hovercard">
      <div class="cardheader">
        <%= image_tag "bguser_infor.jpg", alt: t("alt") %>
      </div>
      <div class="avatar">
        <%= gravatar_for current_user %>
      </div>
      <div class="info">
        <div class="title">
          <%= link_to current_user.name, "#" %>
        </div>
        <%= render "shared/stats"%>
      </div>
      <div class="clear"></div>
    </div>
  </div>
</div>
